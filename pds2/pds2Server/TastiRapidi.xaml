                <TextBox Height="23" HorizontalAlignment="Left" Margin="6,6,0,0" Name="textBox1" VerticalAlignment="Top" Width="75" IsReadOnlyCaretVisible="True" IsEnabled="False" Text="CTRL" TextAlignment="Center" />
            </Grid>
        </Expander>

    </Grid>
</UserControl>
